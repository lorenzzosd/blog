<!-- Page Content -->
<div class="container">
  <div class="row">
    <!-- Post Content Column -->
    <div class="col-lg-3">
      <%= form_for :session, url: admin_sign_in_path do |f| %>
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control"  %>
        </div>

        <div class="form-group">
            <%= f.submit "Log in", class: "btn btn-primary" %>
        </div>
        <p>New user? <%= link_to "Sign up now!", new_admin_user_path, class: "btn btn-link" %></p>
      <% end %>
    </div>
  </div>
</div>

  