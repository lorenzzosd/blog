<!-- Page Content -->
<div class="container">
  <div class="row">
    <!-- Post Content Column -->
    <div class="col-lg-12">
    	<h1 class="title">Posts <%= link_to "New Post", new_admin_post_path, class: "btn btn-outline-primary"%></h1>
    	<hr>

    	<ul class="list-group" id="posts">
    	  <% @posts.each do |post| %>
		    <li class="list-group-item">
		      <h4>
		      	  <%= post.title %>

			      <%= link_to "Excluir", [:admin, post], method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
			      <%= link_to "Editar", [:admin, post], class: "btn btn-info btn-sm" %>
			  </h4>
		    </li>
		  <% end %>
		</ul>
	</div>
  </div>
</div>
