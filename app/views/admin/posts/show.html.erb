<!-- Page Content -->
<div class="container">
  <div class="row">
    <!-- Post Content Column -->
    <div class="col-lg-12">
      <h1 class="title"><%= @post.title %></h1>
      <hr>

      <%= form_for [:admin, @post] do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :markdown %>
          <%= f.text_area :markdown, "data-provide": "markdown", id: "markdown-editor" %>
        </div>
        <prev class="prev"></prev>

        <div class="actions">
          <%= f.submit "Salvar", class: "btn btn-primary"%>

          <%= link_to "Voltar", admin_posts_path, class: "btn btn-warning" %>

          <%= link_to "Excluir", [:admin, @post], method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %></td>
        </div>
      <% end %>
    </div>
  </div>
</div>