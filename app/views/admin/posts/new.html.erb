<!-- Page Content -->
<div class="container">
  <div class="row">
    <!-- Post Content Column -->
    <div class="col-lg-12">
      <h1 class="title">New Post</h1>
      <hr>

      <%= form_for [:admin, @post] do |f| %>
        <% if @post.errors.any? %>
          <div id="error_explanation">
            <div class="alert-error">
              O formulário contém <%= pluralize(@post.errors.count, "erro") %>.
            </div>
            
            <ul>
              <% @post.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control"%>
        </div>
        
        <div class="form-group">
          <%= f.label :markdown %>
          <%= f.text_area :markdown, "data-provide": "markdown", id: "markdown-editor" %>
        </div>
        <prev class="prev"></prev>

        <div class="actions">
          <%= f.submit "Salvar", class: "btn btn-primary"%>

          <%= link_to "Voltar", admin_posts_path, class: "btn btn-warning" %>
        </div>
      <% end %>
    </div>
  </div>
</div>