<!-- Page Content -->
<div class="container">
  <div class="row">
    <!-- Post Content Column -->
    <div class="col-lg-12">
    	<h1 class="title">Users</h1>
    	<hr>

    	<ul class="list-group" id="posts">
    	  <% @users.each do |user| %>
		    <li class="list-group-item">
		      <h4>
		      	  <%= user.name %>

			      <%= link_to "Excluir", [:admin, user], method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
			      <%= link_to "Editar", [:admin, user], class: "btn btn-info btn-sm" %>
			  </h4>
		    </li>
		  <% end %>
		</ul>
	</div>
  </div>
</div>
